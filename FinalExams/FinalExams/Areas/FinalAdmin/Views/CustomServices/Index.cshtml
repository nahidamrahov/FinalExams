 ﻿
@model List<CustomServices>
@{
    int count = 0;
}
<div class="content-wrapper">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Striped Table</h4>
                    <a asp-controller="blog" asp-action="create" class="btn btn-success">Create Services</a>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        No
                                    </th>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                       Title
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        Settings
                                    </th>
                                   
                                </tr>
                            </thead>
                            <tbody>
                               @foreach (CustomServices customServices in Model)
                                {
                                    count++;
                                    <tr>
                                        <td class="py-1">
                                           @count
                                        </td>
                                        <td >

                                           <img style="width:130px;height:130px" src="~/assets/img/@customServices.Icon">
                                        </td>
                                        <td>
                                            @customServices.Title
                                        </td>
                                        
                                        <td>
                                            @customServices.Description
                                        </td>
                                        <td>
                                            <a asp-controller="blog" asp-action="update" asp-route-id="@customServices.Id" class="btn btn-warning"><i class="mdi mdi-pencil"></i>  </a>
                                            <a asp-controller="blog" asp-action="delete" asp-route-id="@customServices.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i>  </a>
                                            <a class="btn btn-success"><i class="mdi mdi-open-in-new"></i>  </a>


                                        </td>
                                      
                                    </tr>
                                }
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
